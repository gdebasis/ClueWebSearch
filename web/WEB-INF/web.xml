<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>servlets.SearchServlet</servlet-class>
        <init-param>
            <param-name>configFile</param-name>
            <param-value>/scratch/dganguly/WebSearcher/init.properties</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>HTMLViewer</servlet-name>
        <servlet-class>servlets.HTMLViewer</servlet-class>
        <init-param>
            <param-name>configFile</param-name>
            <param-value>/scratch/dganguly/WebSearcher/init.properties</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>HTMLViewer</servlet-name>
        <url-pattern>/view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
